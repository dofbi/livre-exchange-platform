---
export interface Props {
  searchQuery?: string
  niveauFilter?: string
  matiereFilter?: string
  regionFilter?: string
  etatFilter?: string
}

const { 
  searchQuery = '', 
  niveauFilter = '', 
  matiereFilter = '', 
  regionFilter = '', 
  etatFilter = '' 
} = Astro.props
---

<div class="bg-white rounded-lg shadow-sm p-6">
  <form method="GET" action="/livres" class="space-y-4">
    <!-- Search Bar -->
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
      <input
        type="text"
        name="q"
        value={searchQuery}
        placeholder="Rechercher par titre, auteur ou ISBN..."
        class="block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-green-500 focus:border-green-500"
      />
    </div>

    <!-- Filters Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <!-- Niveau Filter -->
      <div>
        <label for="niveau" class="block text-sm font-medium text-gray-700 mb-1">
          Niveau scolaire
        </label>
        <select
          name="niveau"
          id="niveau"
          class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500"
        >
          <option value="">Tous les niveaux</option>
          <option value="primaire" selected={niveauFilter === 'primaire'}>Primaire</option>
          <option value="college" selected={niveauFilter === 'college'}>Collège</option>
          <option value="lycee" selected={niveauFilter === 'lycee'}>Lycée</option>
        </select>
      </div>

      <!-- Matière Filter -->
      <div>
        <label for="matiere" class="block text-sm font-medium text-gray-700 mb-1">
          Matière
        </label>
        <select
          name="matiere"
          id="matiere"
          class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500"
        >
          <option value="">Toutes les matières</option>
          <option value="francais" selected={matiereFilter === 'francais'}>Français</option>
          <option value="mathematiques" selected={matiereFilter === 'mathematiques'}>Mathématiques</option>
          <option value="sciences" selected={matiereFilter === 'sciences'}>Sciences</option>
          <option value="histoire-geographie" selected={matiereFilter === 'histoire-geographie'}>Histoire-Géographie</option>
          <option value="anglais" selected={matiereFilter === 'anglais'}>Anglais</option>
          <option value="espagnol" selected={matiereFilter === 'espagnol'}>Espagnol</option>
          <option value="philosophie" selected={matiereFilter === 'philosophie'}>Philosophie</option>
          <option value="svt" selected={matiereFilter === 'svt'}>SVT</option>
          <option value="physique-chimie" selected={matiereFilter === 'physique-chimie'}>Physique-Chimie</option>
        </select>
      </div>

      <!-- Région Filter -->
      <div>
        <label for="region" class="block text-sm font-medium text-gray-700 mb-1">
          Région
        </label>
        <select
          name="region"
          id="region"
          class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500"
        >
          <option value="">Toutes les régions</option>
          <option value="dakar" selected={regionFilter === 'dakar'}>Dakar</option>
          <option value="thies" selected={regionFilter === 'thies'}>Thiès</option>
          <option value="saint-louis" selected={regionFilter === 'saint-louis'}>Saint-Louis</option>
          <option value="kaolack" selected={regionFilter === 'kaolack'}>Kaolack</option>
          <option value="ziguinchor" selected={regionFilter === 'ziguinchor'}>Ziguinchor</option>
          <option value="tambacounda" selected={regionFilter === 'tambacounda'}>Tambacounda</option>
          <option value="kolda" selected={regionFilter === 'kolda'}>Kolda</option>
          <option value="fatick" selected={regionFilter === 'fatick'}>Fatick</option>
          <option value="kaffrine" selected={regionFilter === 'kaffrine'}>Kaffrine</option>
          <option value="kedougou" selected={regionFilter === 'kedougou'}>Kédougou</option>
          <option value="louga" selected={regionFilter === 'louga'}>Louga</option>
          <option value="matam" selected={regionFilter === 'matam'}>Matam</option>
          <option value="sedhiou" selected={regionFilter === 'sedhiou'}>Sédhiou</option>
          <option value="diourbel" selected={regionFilter === 'diourbel'}>Diourbel</option>
        </select>
      </div>

      <!-- État Filter -->
      <div>
        <label for="etat" class="block text-sm font-medium text-gray-700 mb-1">
          État du livre
        </label>
        <select
          name="etat"
          id="etat"
          class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500"
        >
          <option value="">Tous les états</option>
          <option value="neuf" selected={etatFilter === 'neuf'}>Neuf</option>
          <option value="bon" selected={etatFilter === 'bon'}>Bon état</option>
          <option value="usage" selected={etatFilter === 'usage'}>Usagé</option>
        </select>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row gap-3 pt-4">
      <button
        type="submit"
        class="flex-1 bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-md font-medium transition-colors inline-flex items-center justify-center"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        Rechercher
      </button>
      
      <a
        href="/livres"
        class="flex-shrink-0 bg-gray-100 hover:bg-gray-200 text-gray-700 px-6 py-3 rounded-md font-medium transition-colors inline-flex items-center justify-center"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        Réinitialiser
      </a>
    </div>
  </form>

  <!-- Quick Stats -->
  <div class="mt-6 pt-6 border-t border-gray-200">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
      <div>
        <div class="text-2xl font-bold text-green-600">1,247</div>
        <div class="text-sm text-gray-500">Livres disponibles</div>
      </div>
      <div>
        <div class="text-2xl font-bold text-blue-600">342</div>
        <div class="text-sm text-gray-500">Utilisateurs actifs</div>
      </div>
      <div>
        <div class="text-2xl font-bold text-purple-600">89</div>
        <div class="text-sm text-gray-500">Échanges ce mois</div>
      </div>
      <div>
        <div class="text-2xl font-bold text-orange-600">4.8</div>
        <div class="text-sm text-gray-500">Note moyenne</div>
      </div>
    </div>
  </div>
</div>
